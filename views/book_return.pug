extends layout.pug

block content
    h1= title

    include partials/errors.pug

    p
        strong Book Title: 
        | #{loan.Book.title}
    p
        strong Loaned By: 
        | #{loan.Patron.getFullname()}
    p
        strong Loaned On: 
        | #{loan.loaned_on}
    p
        strong Return By: 
        | #{loan.return_by}
    form(
        action=`/loans/${loan.id}/return?_method=PUT` method="POST"
    )
        p
            label(for='returned_on') Returned on:
            input#returned_on(type='text', value=r_loan.returned_on name='returned_on')
        p
            input(type='submit', value='Return Book')
